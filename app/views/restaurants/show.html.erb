<h2><%= @restaurant.name %></h2>
<p>Cuisine: <%= @restaurant.category.capitalize %></p>
<p>Contact: <%= @restaurant.address %></p>
<p>Phone: <%= @restaurant.phone_number %></p>

<h3>Reviews</h3>

<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %> | <%= review.rating %></li>
  <% end %>
</ul>

<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>
<%= link_to 'Back', restaurants_path %>