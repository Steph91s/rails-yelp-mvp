<h1>List of restaurants</h1>

<ul>
  <% @restaurants.each do |restaurant| %>
    <li>
        <%= restaurant.name %> |
        <%= link_to "See details", restaurant_path(restaurant), class: "btn btn-primary"%>
        </li>
  <% end %>
</ul>

<p><%= link_to "Add a new restaurant", new_restaurant_path %></p>
